@inject NavigationManager NavigationManager
@inject ILogHubAuthenticationService AuthenticationService
@inject AuthenticationStateProvider AuthenticationStateProvider

<MudThemeProvider @bind-IsDarkMode="@_isDarkMode" Theme="_theme"/>

<MudAppBar Elevation="0" Color="Color.Transparent">
    <AuthorizeView>
        <Authorized>
            <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())"/>
            <MudSpacer/>
        </Authorized>
        <NotAuthorized>
            <MudSpacer/>
            <MudButtonGroup DisableElevation="true" Variant="Variant.Outlined" Color="Color.Primary">
                <MudButton Href="/login">
                    <MudText>
                        Log in
                    </MudText>
                </MudButton>
                <MudButton Href="/register">
                    <MudText>
                        Register
                    </MudText>
                </MudButton>
            </MudButtonGroup>
        </NotAuthorized>
    </AuthorizeView>
    <MudToggleIconButton @bind-Toggled="@_isDarkMode" Icon="@Icons.Material.Filled.LightMode" Title="Change to Dark Mode" ToggledIcon="@Icons.Material.Outlined.DarkMode" ToggledTitle="Change to Light Mode" Class="ml-4"/>
</MudAppBar>
