@page "/organisations/{id:guid}/{listType}"
@layout FormLayout
@attribute [Authorize(Roles = "DataManager,Administrator")]


<PageTitle>
    LogHub | @CurrentOrganisation.Name
</PageTitle>


<OrganisationDetailsHeader Index="_index" CurrentOrganisation="CurrentOrganisation" Role="@Role"/>

@switch (ListType)
{
    case "sub-organisation-list":
        _index = 0;
        <SubOrganisationList CurrentOrganisation="@CurrentOrganisation" Role="@Role"/>
        break;
    case "user-list":
        _index = 1;
        <UserList CurrentOrganisation="@CurrentOrganisation" Role="@Role"/>
        break;
    case "repository-list":
        _index = 2;
        break;
    case "dmp-template-list":
        _index = 3;
        <DataManagementPlanTemplateList Id="@CurrentOrganisation.Id" Role="@Role"/>
        break;
    case "setting-list":
        _index = 4;
        <SettingList Id="@CurrentOrganisation.Id" Role="@Role"/>
        break;
}

@code {

    [Parameter]
    public Guid? Id { get; set; }

    [Parameter]
    public string ListType { get; set; } = "sub-organisation-list";

    OrganisationRole Role { get; set; } = OrganisationRole.Guest;

    int _index;

    private OrganisationModel CurrentOrganisation { get; set; } = new();

    protected override async Task OnInitializedAsync()
    {
        CurrentOrganisation = await Client.GetFromJsonAsync<OrganisationModel>($"api/organisations/{Id}") ?? new OrganisationModel();
        if (CurrentOrganisation.Id == Guid.Empty)
        {
            return;
        }

        await OrganisationPermissionService.UpdateAsync(CurrentOrganisation.Id);

        if (UserAccountService.CurrentUser != null)
        {
            var response = await Client.GetAsync($"api/organisations/{Id}/users/{UserAccountService.CurrentUser.Id}");
            if (response.IsSuccessStatusCode)
            {
                Role = await response.Content.ReadFromJsonAsync<OrganisationRole>();
            }
            else
            {
                Role = OrganisationRole.Guest;
            }
        }

        if (PathService.Items.Count == 0)
        {
            PathService.AddPath(CurrentOrganisation.Name, $"/organisations/{Id}/sub-organisation-list");
        }
        NavigationManager.LocationChanged += OnLocationChanged;
        OrganisationPermissionService.OnChange += StateHasChanged;
    }

    private void Dispose()
    {
        NavigationManager.LocationChanged -= OnLocationChanged;
        OrganisationPermissionService.OnChange -= StateHasChanged;
    }

    private async void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        if (!e.Location.Contains("organisation") || !e.Location.Contains("list"))
        {
            return;
        }

        CurrentOrganisation = await Client.GetFromJsonAsync<OrganisationModel>($"api/organisations/{Id}") ?? new OrganisationModel();
        if (CurrentOrganisation.Id == Guid.Empty)
        {
            return;
        }

        await OrganisationPermissionService.UpdateAsync(CurrentOrganisation.Id);
        if (UserAccountService.CurrentUser != null)
        {
            var response = await Client.GetAsync($"api/organisations/{Id}/users/{UserAccountService.CurrentUser.Id}");
            if (response.IsSuccessStatusCode)
            {
                Role = await response.Content.ReadFromJsonAsync<OrganisationRole>();
            }
            else
            {
                Role = OrganisationRole.Guest;
            }
        }

        StateHasChanged();
    }

}
